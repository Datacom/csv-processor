<tr>
  <td><%= link_to_name build %></td>
  <td><%= build.updated_at.getlocal %></td>
  <td><%= build.table.count %></td>
  <td><%= build.table.headers.count %></td>
  <td><%= build.input_files.count %></td>
  <td>
    <div class="btn-group">
      <%= link_to icon(:search), '#', class: 'btn btn-default cp-expand-build', title: 'Expand', data: {build_id: build.id} %>
      <%= link_to icon(:download), build_download_path(build), class: 'btn btn-default', title: 'Download' %>
      <%= link_to icon(:pencil),   build, class: 'btn btn-default', title: 'Edit'     %>
      <%= link_to icon(:trash_o),  build, method: :delete, confirm: 'Are you sure you want to delete this build?',
            class: 'btn btn-default', title: 'Delete'   %>
    </div>
  </td>
</tr>

<%# Using jQuery toggle() methods affects the display attribute, so using that rather than the 'hidden' class %>
<tr id="cp-build-<%= build.id %>-preview" style="display: none">
  <td colspan="9">
    <%= csv_to_html(build.table, add_class: 'table-condensed') %>
  </td>
</tr>
